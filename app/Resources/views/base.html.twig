<html>
    <head>        
        <title>{% block title %}{% endblock %} - DigitalKaoz</title>
        {% include '::head.html.twig' %}
        {% block stylesheets %}{% endblock %}  
    </head>
    
<body>
	<div class="topbar" data-dropdown="dropdown">
		<div class="topbar-inner">
			<div class="container">
				<h3>
					<a href="http://digitalkaoz.net">Digital.kaoZ</a>
				</h3>
                <div id="nav">{% render 'rskaoz4FrontBundle:Home:mainNavigation' with {}, {'standalone': true} %}</div>
                
				<form class="pull-right" action="">
					<input type="text" placeholder="Search">
				</form>
			</div>
		</div>
	</div>
	<div class="container main">
		{% block flashes %}
		    {{ session_flash() }}
		{% endblock  %}
        {% block body %}{% endblock %}            
	</div>
        
    <footer>{% render 'rskaoz4FrontBundle:Home:footer' with {}, {'standalone': true} %}</footer>
        
    {% include '::scripts.html.twig' %}
    {% block javascripts %}{% endblock %}
        
</body>
</html>