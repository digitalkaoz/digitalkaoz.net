    <head>        
        <title>{% block title %}{% endblock %} - DigitalKaoz</title>
        {% include '::head.html.twig' %}
        {% block stylesheets %}{% endblock %}  
    </head>

    <body>
        <div class="page_margins">

            <!-- start: skip link navigation -->
            <a class="skip" title="skip link" href="#navigation">Skip to the navigation</a><span class="hideme">.</span>
            <a class="skip" title="skip link" href="#content">Skip to the content</a><span class="hideme">.</span>
            <!-- end: skip link navigation -->

            <div class="page">

                <header>{% render 'rskaoz4FrontBundle:Home:header' with {}, {'standalone': true} %}</header>

                <div id="nav">{% render 'rskaoz4FrontBundle:Home:mainNavigation' with {}, {'standalone': true} %}</div>
                
                <div id="main">

                    <div id="col1"><div id="col1_content" class="clearfix" role="main">
                        {% block body %}{% endblock %}
                    </div></div>

                    <div id="col3">
                        <div id="col3_content" class="clearfix">
                            <!-- add your content here -->
                        </div>
                        <!-- IE Column Clearing -->
                        <div id="ie_clearing"> &#160; </div>
                    </div>

                </div>

                <footer>{% render 'rskaoz4FrontBundle:Home:footer' with {}, {'standalone': true} %}</footer>

            </div>            
        </div>
            
        {% include '::scripts.html.twig' %}
        {% block javascripts %}{% endblock %}
    </body>
</html>