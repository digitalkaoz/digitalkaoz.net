{
    "name":"digitalkaoz.net",
    "type":"webpage",
    "homepage":"http://digitalkaoz.net",

    "require":{
        "symfony/framework-standard-edition":"~2.2",

        "kriswallsmith/buzz":"~0.10",
        "friendsofsymfony/elastica-bundle" : "~2.1",
        "stof/doctrine-extensions-bundle":"dev-master@dev",
        "elao/web-profiler-extra-bundle":"~2.2",
        "ornicar/akismet-bundle":"dev-master@dev",
        "mopa/bootstrap-bundle":"2.2-alpha1",
        "twitter/bootstrap":"~2.3",
        "kphoen/contact-bundle":"~1.0",
        "doctrine/data-fixtures" : "~1.0-alpha3",
        "doctrine/doctrine-fixtures-bundle" : "dev-master@dev",
        "liip/doctrine-cache-bundle": "~1.0",
        "sensiolabs/connect-bundle": "dev-master@dev",

        "knplabs/knp-menu-bundle":"~1.1",
        "knplabs/knp-paginator-bundle":"~2.3",
        "knplabs/knp-disqus-bundle":"dev-master@dev",
        "knplabs/github-api":"dev-master@dev",

        "monofone/connect-bundle":"dev-master@dev",
        "knplabs/knp-last-tweets-bundle":"dev-doctrine_cache@dev",

        "sonata-project/admin-bundle": "~2.2",
        "sonata-project/doctrine-orm-admin-bundle": "~2.2"
    },

    "autoload":{
        "psr-0":{
            "rs":"src/"
        }
    },

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/digitalkaoz/BlageConnectBundle"
        },
        {
            "type" : "vcs",
            "url" : "https://github.com/digitalkaoz/KnpLastTweetsBundle"
        }
    ],

    "scripts": {
        "post-install-cmd": [
            "npm --prefix=./web/js/libs install",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "app/console mopa:bootstrap:symlink:less",
            "app/console assetic:dump --env=prod --no-debug"
        ],
        "post-update-cmd": [
            "npm --prefix=./web/js/libs install",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "app/console mopa:bootstrap:symlink:less",
            "app/console assetic:dump --env=prod --no-debug"
        ]
    },

    "config": {
        "bin-dir": "bin"
    }
}
