{% extends "::base1col.html.twig" %}

{% block title %} Home {% endblock %}

{% block body %}


<div class="container">
    <section>
        <div class="row main">
            <div class="span8 offset2">
                <div class="page-header">
                    <h2>Neuester Blog Artikel</h2>
                </div>
                {% render 'rskaoz4FrontBundle:Blog:latest' with {}, {'standalone': true} %}
            </div>
        </div>
    </section>

    <section>
        <div class="row main">
            <div class="span4 offset2">
                <div class="tile50">
                    <h2>Neueste Projekte</h2>
                    {% render 'rskaoz4FrontBundle:Project:latest' with {}, {'standalone': true} %}
                </div>
            </div>
            <div class="span4">
                <div class="tile50">
                    <h2 class="twitter">Twitter Feed</h2>
                    {% render "KnpLastTweetsBundle:Twitter:lastTweets" with {'username': 'digitalkaoz'}, {'standalone': true} %}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}