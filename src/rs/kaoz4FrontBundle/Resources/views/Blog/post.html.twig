{% extends "::base2col.html.twig" %}

{% block title %} {{ post.title }} - Blog {% endblock %}

{% block body %}

    <div class="row">
        {% if post.logo %}
            <img src="{{ post.logo}}" alt="{{ post.title }}" title="{{ post.title }}" class="span2"/>
        {% else %}
            <div class="span2"></div>
        {% endif %}
        
        <div class="span10 offset2">
            <h2>{{ post.title|e }}</h2>
        </div>

        <div class="span12">
            <p>{{ post.text|raw }}</p>
        </div>

    </div>

    <div id="disqus_thread" class="span10">
        {{ knp_disqus_render('blog', {'identifier': post.slug, 'limit': 100}) }}
    </div>
    
{% endblock %}