{% extends "::base.html.twig" %}

{% block title %} Projects {% endblock %}

{% block body %}

    <div class="row">
        <div class="span16">
            <h2>Projects</h2>
        </div>
    </div>

    {% if projects %}
          {% for project in projects %}
            {% include 'rskaoz4FrontBundle:Projects:short.html.twig' with { 'slug': project.slug, 'full': false } %}
          {% endfor %}
    {% endif %}

{% endblock %}