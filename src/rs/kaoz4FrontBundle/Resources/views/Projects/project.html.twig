{% extends "::base.html.twig" %}

{% block title %} {{ project.name }} - Projects {% endblock %}

{% block body %}

    <div class="row">
        
        {% if project.logo %}
            <img src="{{ project.logo}}" alt="{{ project.name }}" title="{{ project.name }}" class="span2"/>
        {% else %}
            <div class="span2"></div>
        {% endif %}
         
        <div class="span14 offset2">
            <h2>{{ project.name|e }}</h2>
        </div>

        <div class="span16">
            <p>{{ project.description }}</p>
        </div>
            
        <div id="disqus_thread" class="span14 offset1"></div>
        {{ disqus_comments({'disqus_identifier': project.slug })}}
            
    </div>
{% endblock %}