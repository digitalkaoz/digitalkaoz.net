<div class="row">
    
    <div class="span8">
        <a href="{{ path('project', { 'slug': project.slug }) }}">
            {% if project.logo %}
                <img src="{{ project.logo}}" alt="{{ project.name }}" title="{{ project.name }}" width="50"/>
            {% endif %}
            <strong>{{ project.name|e }}</strong>
        </a>
    </div>

    <div class="span8">
        <p>{{ project.description|raw }}</p>
    </div>
</div>